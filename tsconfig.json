{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"isolatedModules": false,
		"jsx": "react",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": false,
		"noImplicitAny": false,
		"noImplicitUseStrict": false,
		"removeComments": true,
		"noLib": false,
		"preserveConstEnums": true,
		"suppressImplicitAnyIndexErrors": true,
		"outDir": "js"
	},
	"exclude": [
		"node_modules",
		"typings",
		"local",
		"bower_components"
	],
	"compileOnSave": true,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}
